<!doctype html>
<html lang="{{lang}}">
  <head>
      <meta charset="utf-8">
      <meta name="description" content="">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>{{ title }}</title>

      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >
      <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800,900" rel="stylesheet">

      <!-- This meta tag holds version info for code, filled by gulp in html build task -->
      <meta name="application-name" content="Moonspeak" data-git-hash="{{git_hash}}" data-date="{{git_date}}">

      <link href="../common/scribbler-global.css" rel="stylesheet">
      <link href="../common/scribbler-landing.css" rel="stylesheet">
      <link href="humans.txt" rel="author">

      <link href="favicon.png" rel="icon">
  </head>
  <body>
    <div class="doc__bg"></div>
    <nav class="header">
        <h1 class="logo">{{logo}}</h1>
      <ul class="menu">
        <div class="menu__item toggle"><span></span></div>
        <li class="menu__item"><a class="link link--dark" href="index.html"><i class="fa fa-home"></i> {{ menu__item__index_html }} </a></li>
        <li class="menu__item"><a class="link link--dark" ref="https://github.com/temach/jplang/"><i class="fa fa-github"></i> Github</a></li>
      </ul>
    </nav>
    <div class="wrapper">
      <aside class="doc__nav">
        <ul>
            <li class="js-btn selected">{{doc__nav__intro}}</li>
            <li class="js-btn">{{doc__nav__project}}</li>
            <li class="js-btn">{{doc__nav__dev}}</li>
            <li class="js-btn">{{doc__nav__feedback}}</li>
        </ul>
      </aside>
      <article class="doc__content">
        <section class="js-section">
          <h3 class="section__title" id="Intro"><a href="#Intro"> {{ doc__introduction__title}}  </a></h3>

          <!-- Also: https://japaneseruleof7.com/why-you-must-learn-kanji/ -->
          {{ doc__introduction__html }}

          <hr>
        </section>

        <section class="js-section">
            <h3 class="section__title" id="Project"><a href="#Project"> {{doc__project__title}}</a></h3>

            {{ doc__project__html }}

          <hr>
        </section>

        <section class="js-section">
            <h3 class="section__title" id="Development"><a href="#Development">{{doc__dev__title}}</a></h3>

            {{doc__dev__html}}

          <hr>
        </section>

        <section class="js-section">
            <h3 class="section__title" id="Feedback"><a href="#Feedback">{{doc__feedback__title}}</a></h3>

            {{doc__feedback__html}}

        </section>

      </article>
    </div>

    <footer class="footer">{{footer}}</footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    <script src="../common/scribbler.js" defer="defer"></script>
  </body>
</html>
