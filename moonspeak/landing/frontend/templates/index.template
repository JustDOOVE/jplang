<!doctype html>
<html lang="{{lang}}">
  <head>
      <meta charset="utf-8">
      <meta name="description" content="">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>{{ title }}</title>

      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >
      <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800,900" rel="stylesheet">

      <!-- This meta tag holds version info for code, filled by gulp in html build task -->
      <meta name="application-name" content="Moonspeak" data-git-hash="{{git_hash}}" data-date="{{git_date}}">

      <link href="../common/scribbler-global.css" rel="stylesheet">
      <link href="../common/scribbler-landing.css" rel="stylesheet">
      <link href="humans.txt" rel="author">

      <!-- choose your font: https://www.freejapanesefont.com/tag/commercial-use-ok/page/2/ -->
      <link href="../common/fountain.css" rel="stylesheet">

      <link href="favicon.png" rel="icon">
  </head>
  <body id="fountain">
    <nav>
      <img class="logo" src="logo.png" title="Moonspeak project logo" alt="Moonspeak project logo"/>
      <ul class="menu">
        <div class="menu__item toggle"><span></span></div>
        <li class="menu__item"><a class="link link--dark" href="doc.html" title="{{menu__item__kanji}}"><i class="fa fa-book"></i> {{ menu__item__kanji }}</a></li>
        <li class="menu__item"><a class="link link--dark" href="doc.html#Development" title="{{menu__item__documentation}}"><i class="fa fa-book"></i> {{ menu__item__documentation }} </a></li>
        <li class="menu__item"><a class="link link--dark" href="https://github.com/temach/jplang/" title="Github"><i class="fa fa-github"></i> Github</a></li>
      </ul>
    </nav>
    <div class="hero">
        <h1 class="hero__title"> {{ hero__title }} </h1>
        <p class="hero__description"> {{ hero__description }} </p>
    </div>
    <div class="wrapper">
      <div class="callout">
          <p>{{ start_callout }}</p>
          <a class="button--primary" href="signup.html" title="{{start_callout_button}}" target="_blank">{{{ start_callout_button }}}</a>
      </div>
      <div class="feature">
        <div class="feature__item">
            <h3 class="section__title">{{ feature_title_1 }} </h3>
            <p>{{{ feature_html_1}}}</p>
        </div>
        <div class="feature__item">
            <h3 class="section__title">{{feature_title_2}}</h3>
            <p>{{{feature_html_2}}}</p>
        </div>
        <div class="feature__item">
            <h3 class="section__title">{{feature_title_3}}</h3>
            <p>{{{feature_html_3}}}</p>
        </div>
        <div class="feature__item">
            <h3 class="section__title">{{feature_title_4}}</h3>
            <p>{{{feature_html_4}}}</p>
        </div>
        <div class="feature__item">
            <h3 class="section__title">{{feature_title_5}}</h3>
            <p>{{{feature_html_5}}}</p>
        </div>
        <div class="feature__item">
            <h3 class="section__title">{{feature_title_6}}</h3>
            <p>{{{feature_html_6}}}</p>
        </div>
      </div>
      <div class="installation">
          <h3 class="section__title">{{dev__title}}</h3>
        <div class="tab__container">
          <ul class="tab__menu">
            <li class="tab active" data-tab="mac">mac</li>
            <li class="tab" data-tab="linux">linux</li>
            <li class="tab" data-tab="win">win</li>
          </ul>
          <pre class="nohighlight code">
            <code class="tab__pane active mac">git clone https://github.com/temach/jplang/ && cd jplang && docker-compose up </code>
            <code class="tab__pane linux">git clone https://github.com/temach/jplang/ && cd jplang && docker-compose up </code>
            <code class="tab__pane win">git clone https://github.com/temach/jplang/ && cd jplang && docker-compose up </code>
          </pre>
        </div>
      </div>
      <div class="callout">
          <p>{{doc_callout}}</p>
          <a class="button--primary" href="doc.html" title="{{doc_callout_button}}">{{{doc_callout_button}}}</a>
      </div>
    </div>
    <div class="changelog">
      <div class="wrapper">
          <h3 class="section__title">{{changelog__title}}</h3>
        <div class="changelog__item">
          <div class="changelog__meta">
            <h4 class="changelog__title">v1.1</h4>
            <small class="changelog__date">2022-05-17</small>
          </div>
          <div class="changelog__detail">
            <ul>
                <li>{{changelog__detail_2}}</li>
            </ul>
          </div>
        </div>
        <div class="changelog__item">
          <div class="changelog__meta">
            <h4 class="changelog__title">v1.0</h4>
            <small class="changelog__date">2022-05-10</small>
          </div>
          <div class="changelog__detail">
            <ul>
                <li>{{changelog__detail_1}}</li>
            </ul>
          </div>
        </div>
        <div class="changelog__callout">
            <a class="button--secondary" href="#" title="{{changelog__callout_button}}">{{changelog__callout_button}}</a>
        </div>
      </div>
    </div>
    <footer class="footer">{{{footer_html}}}</footer>
    <script src="../common/scribbler.js" defer="defer"></script>
    <script src="../common/fountain.js" defer="defer"></script>
  </body>
</html>
